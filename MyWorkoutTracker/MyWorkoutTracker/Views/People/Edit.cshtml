@model MyWorkoutTracker.Models.Person

@{
    ViewBag.Title = "Edit";
}

<body style="background: linear-gradient(to bottom, #2e2c2c 10%, #ffffff 100%);color:black">
    <h1 style="color:#145214;">Edit</h1>
    <hr />

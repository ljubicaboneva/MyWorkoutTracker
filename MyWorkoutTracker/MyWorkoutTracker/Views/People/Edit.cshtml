                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-default btn-success" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        @if (User.IsInRole("Administrator"))
                        {
                            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-success btn-default" })
                        }
                    </div>
                </div>
            </div>
            }

        </div>
        <div class="col-lg-5">
            <div class="text-center" style="margin-top: 15px; margin-bottom:15px;">
                <img src="~/Images/Logo.jpg" class="text-center img-thumbnail" style="width: 70%; border-radius:50%;" />
            </div>
        </div>
    </div>
    <br /><br /><br /><br /><br />

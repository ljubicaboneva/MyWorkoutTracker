@model MyWorkoutTracker.Models.AddToRoleModel
@{
    ViewBag.Title = "AddUserToRole";
}
<body style="background: linear-gradient(to bottom, #2e2c2c 10%, #ffffff 100%);">
    <div class="container">
        <div class="row">
            <div class="col-lg-4"></div>
            <div class="col-lg-6">
                <h2 class="text-success">Add User To Role</h2>
                @using (Html.BeginForm("AddUserToRole", "Account"))
                {
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, new { @style = "color:white;" })
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.DropDownListFor(m => m.SelectedRole, new SelectList(Model.roles), new { @class = "form-control" })
                    </div>
                    <button type="submit" class="btn btn-default btn-success">Add</button>
                }
            </div>
            <div class="col-lg-2"></div>
        </div>
        <div class="row">
            <div class="col-lg-4"></div>
            <div class="col-lg-6">
                <div style="margin-top: 30px; margin-bottom:15px;">
                    <img src="~/Images/Logo.jpg" class="text-center img-thumbnail" style="width: 50%; border-radius:50%;" />
                </div>
            </div>
            <div class="col-lg-2"></div>
        </div>
        <br /><br /><br />
    </div>
</body>
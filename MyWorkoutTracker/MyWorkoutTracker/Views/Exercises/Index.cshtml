@model IEnumerable<MyWorkoutTracker.Models.Exercise>
@{
    ViewBag.Title = "Exercise";
}
<body style="background: linear-gradient(to bottom, #2e2c2c 10%, #ffffff 100%);">

    @using (Html.BeginForm("Exercise", "Exercises", FormMethod.Post))
    {

        <div class="row" style="padding-top:25px;">
            @foreach (var item in Model)
            {
                <div class="col-lg-4" style="padding-bottom:25px;">
                    <div class="card img-rounded" style="width: 30rem; padding:15px; background-color:dimgrey; border:solid; border-color:#145214">
                        <div class="card-header" style="color:white">
                            <h4> @item.Name</h4>
                        </div>
                        <br />
                        <img style="width:100%" class="card-img-top img-rounded" src="~/Images/picture1.jpg" alt="Card image cap">
                        <div class="card-body">
                            <br />
                            <p class="card-text" style="color:white">Quick sample text to create the card title and make up the body of the card's content.</p>
                            <div>
                                @Html.CheckBoxFor(i => item.isSelected)
                                @Html.HiddenFor(i => item.id)
                                @Html.LabelFor(i => item.isSelected, new { @style = "color:#145214;" })

                            </div>

                        </div>
                    </div>
                </div>
                bool ok = item.isSelected;
                if (ok == true)
                {
                    item.isChecked = true;
                }
            }
        </div>


        //foreach (var o in Model)
        //{
        //    if (o.isSelected)
        //    {
        //        o.isChecked = true;
        //    }
        //}
        <input type="submit" class="btn btn-success" />

    }




</body>